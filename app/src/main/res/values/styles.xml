<?xml version="1.0" encoding="utf-8"?>
<resources>

<!--    <style name=""-->

    <style name="BooksListCard">
        <item name="android:layout_margin">14dp</item>
    </style>

    <style name="BooksListCard.ShapesAppearanceOverlay">
        <item name="cornerSize">15dp</item>
    </style>

    <style name="BooksListCardLayout">
        <item name="android:layout_margin">@dimen/adapter_item_margin</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:background">#333333</item>
    </style>

    <style name="BooksListCardImage">
        <item name="android:maxWidth">@dimen/adapter_item_max_width_image</item>
    </style>
    <style name="BooksListCardTextContent">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
    </style>
    <style name="BooksListCardTitle">
        <item name="android:text">@string/book_title_item</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/title_item</item>
    </style>
    <style name="BooksListCardPrice">
        <item name="android:text">@string/book_price_item</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/price_item</item>
    </style>

    <style name="PanierTitre">
        <item name="android:textSize">35sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="NombreLivres">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="ElementTitre">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
    </style>
    <style name="Prix">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginBottom">50sp</item>
    </style>
    <style name="Reduction">
        <item name="android:textSize">30sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>